<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="producto_view_form_inherti" model="ir.ui.view">
        <field name="name">producto_view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="cantidad_unidad"/>
                <field name="estado" string="Estado"/>
                <field name="modelo"/>
                <field name="capacidad"/>
                <field name="marca"/>
                <field name="aplica"/>
                <field name="equipo" string="Equipo Compuesto"/>
            </xpath>
        </field>
    </record>

    <record id="producto_variante_view_form_inherit" model="ir.ui.view">
        <field name="name">producto_view.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="cantidad_unidad_v"/>
                <field name="estado_v" string="Estado"/>
                <field name="modelo_v"/>
                <field name="capacidad_v"/>
                <field name="marca_v"/>
                <field name="aplica_v"/>
                <field name="equipo_v" string="Equipo Compuesto"/>
            </xpath>
        </field>
    </record>
</odoo>
